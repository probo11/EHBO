<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:slagboom"
             x:Class="slagboom.MainPage">

    <StackLayout>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="160" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
        </Grid>
        <!-- Place new controls here -->
        <Button  x:Name="openbutton" BackgroundColor="White" Text="Open slagboom" TextColor="Gray" Grid.Row="1" Grid.Column="0" />

        <Label x:Name="sonarValue" Text="Sonar value" Grid.Row="1" Grid.Column="1"/>
        <Label x:Name="slagboomValue" Text="Slagboom positie" Grid.Row="1" Grid.Column="1"/>

    </StackLayout>

</ContentPage>
